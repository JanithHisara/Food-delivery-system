FROM node:22-alpine

# Set working directory
WORKDIR /usr/src/app

# Install dependencies (only production)
COPY package*.json ./
RUN npm ci --only=production --silent

# Copy source code
COPY --chown=node:node . .

# Use non-root user for security
USER node

# Expose port (must match docker-compose and nginx config)
EXPOSE 4000

# Start command
CMD ["npm", "start"]
